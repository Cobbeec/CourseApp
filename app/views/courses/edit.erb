<h1>Edit Course <%= @course.name%></h1>

<form method="POST" action="/genres/<%=@course.id%>">
<input type="hidden" name="_method" value="PATCH"> 


<label>Course Name:</label>
  <br></br>
  <input type="text" name="course[name]" id="course_name" value="<%= @course.name%>">
 

<br></br>
<label>Subject:</label>
<br></br>
<input type="text" name="course[subject]" id="course_subject">

<br></br>
<label>Teacher:</label>
<br></br>
<input type="text" name="course[teacher]" id="course_teacher">

<input type="submit" value="Edit Course">

</form>
