<h1 style="background-color:SteelBlue;">Edit Course <%= @course.name%></h1>

<% if flash[:message] %>
<%= flash[:message] %> 
<% end %> 

<form method="POST" action="/courses/<%=@course.id%>">
<input type="hidden" name="_method" value="PATCH"> 


<label>Course Name:</label>
  <br></br>
  <input type="text" name="course[name]" id="course_name" value="<%= @course.name%>">
 

<br></br>
<label>Subject:</label>
<br></br>
<input type="text" name="course[subject]" id="course_subject" value="<%= @course.subject%>">

<br></br>
<label>Teacher:</label>
<br></br>
<input type="text" name="course[teacher]" id="course_teacher" value="<%= @course.teacher%>">

<input type="submit" value="Edit Course">

</form>
